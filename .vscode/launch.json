{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/": "${workspaceFolder}",
        "C:\\OSPanel\\home\\workbench": "${workspaceFolder}"
      },
      "log": true,
      "stopOnEntry": false
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9003,
      "runtimeExecutable": "C:\\OSPanel\\modules\\PHP-8.4\\php.exe",
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes"
      ],
      "env": {
        "XDEBUG_MODE": "debug",
        "XDEBUG_SESSION": "1"
      }
    },
    {
      "name": "Launch index.php",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/index.php",
      "cwd": "${workspaceFolder}",
      "port": 9003,
      "runtimeExecutable": "C:\\OSPanel\\modules\\PHP-8.4\\php.exe",
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes",
        "-S",
        "localhost:8000"
      ],
      "env": {
        "XDEBUG_MODE": "debug"
      }
    },
    {
      "name": "Run PHPUnit Tests",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/phpunit",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "C:\\OSPanel\\modules\\PHP-8.4\\php.exe",
      "args": [
        "--no-coverage"
      ]
    }
  ]
}
